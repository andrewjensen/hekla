#!/usr/bin/env node --harmony

var program = require('commander');
var pkg = require('../package.json');

var analyze = require('../src/commands/analyze');
var view = require('../src/commands/view');

program
  .version(pkg.version, '-v, --version');

program
  .command('analyze')
  .description('Analyze a project')
  .action(() => analyze());

program
  .command('view [filename]')
  .description('View a hekla dependency graph')
  .option('-p, --port [port]', 'Port for the viewer server to use', 4000)
  .action(view);

program.parse(process.argv);
